            r = int.Parse(sugar); //Számmá váltja
            Console.WriteLine("A/Az {0} sugarú kör kerülete: {1}", r, 2 * r * 3.14);
            Console.WriteLine("A/Az {0} sugarú kör területe: {1}", r, r * r * 3.14);
